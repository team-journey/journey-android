<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/journey_transparency">

    <ImageButton
        android:id="@+id/imagebutton_emoji_close"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:background="@drawable/ic_emoji_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imagebutton_emoji_first"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_emoji_sample"
        app:layout_constraintBottom_toTopOf="@+id/imagebutton_emoji_close"
        app:layout_constraintEnd_toStartOf="@+id/imagebutton_emoji_second" />

    <ImageButton
        android:id="@+id/imagebutton_emoji_second"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginBottom="58dp"
        android:background="@drawable/ic_emoji_sample"
        app:layout_constraintBottom_toTopOf="@+id/imagebutton_emoji_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imagebutton_emoji_third"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/ic_emoji_sample"
        app:layout_constraintBottom_toTopOf="@+id/imagebutton_emoji_close"
        app:layout_constraintStart_toEndOf="@+id/imagebutton_emoji_second" />

    <ImageButton
        android:id="@+id/imagebutton_emoji_fourth"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_emoji_sample"
        app:layout_constraintEnd_toStartOf="@+id/imagebutton_emoji_fifth"
        app:layout_constraintTop_toBottomOf="@+id/imagebutton_emoji_close" />

    <ImageButton
        android:id="@+id/imagebutton_emoji_fifth"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/ic_emoji_sample"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagebutton_emoji_close" />

    <ImageButton
        android:id="@+id/imagebutton_emoji_sixth"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/ic_emoji_sample"
        app:layout_constraintStart_toEndOf="@+id/imagebutton_emoji_fifth"
        app:layout_constraintTop_toBottomOf="@+id/imagebutton_emoji_close" />

</androidx.constraintlayout.widget.ConstraintLayout>
