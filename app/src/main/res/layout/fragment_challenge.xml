<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".challenge.view.ChallengeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout_challenge_gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageview_journey_gone"
                android:layout_width="230dp"
                android:layout_height="300dp"
                android:background="@drawable/challenge_journey_gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textview_challenge_gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/spoqahansansneoregular"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="쟈니는 처음이지?\n코스부터 선택하고 와라라라라랄"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageview_journey_gone" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_challenge_course"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_round"
                android:fontFamily="@font/spoqahansansneobold"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingHorizontal="60dp"
                android:paddingVertical="8dp"
                android:text="코스 선택하기"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_challenge_gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_challenge_ongoing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="18dp"
        android:paddingTop="32dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imagebutton_challenge_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@color/journey_transparency"
            android:src="@drawable/ic_challenge_map"
            app:layout_constraintEnd_toStartOf="@+id/imagebutton_challenge_browse"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imagebutton_challenge_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/journey_transparency"
            android:src="@drawable/ic_challenge_library"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_challenge_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/spoqahansansneobold"
            android:text="오늘의 챌린지"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagebutton_challenge_course" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout_challenge_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_challenge_today">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_sub_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/challenge_layout_radius"
                android:paddingBottom="23dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/imageview_back_first"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:visibility="invisible"
                    android:src="@drawable/challenge_back_first"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/textview_first_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="43dp"
                    android:fontFamily="@font/spoqahansansneoregular"
                    android:text="뽀득뽀득 세균퇴치"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textview_first_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="깨끗하게 손씻기 3회"
                    android:textColor="@color/journey_pink_b"
                    android:textSize="26sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_first_title" />

                <ImageButton
                    android:id="@+id/imagebutton_first_first"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="30dp"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/stamp_health_no"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_first_content" />

                <TextView
                    android:id="@+id/textview_first_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="39dp"
                    android:fontFamily="@font/spoqahansansneoregular"
                    android:gravity="center"
                    android:text="@string/challenge_explain"
                    android:textColor="#767171"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagebutton_first_first" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_sub_second"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/challenge_layout_radius"
                android:paddingBottom="23dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/imageview_back_second"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:visibility="invisible"
                    android:src="@drawable/challenge_back_second"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/textview_second_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="43dp"
                    android:fontFamily="@font/spoqahansansneoregular"
                    android:text="뽀득뽀득 세균퇴치"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textview_second_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="깨끗하게 손씻기 3회"
                    android:textColor="@color/journey_pink_b"
                    android:textSize="26sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_second_title" />

                <ImageButton
                    android:id="@+id/imagebutton_second_first"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="34dp"
                    android:background="#00000000"
                    android:src="@drawable/stamp_health_no"
                    app:layout_constraintEnd_toStartOf="@+id/imagebutton_second_second"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_second_content" />

                <ImageButton
                    android:id="@+id/imagebutton_second_second"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginStart="17dp"
                    android:background="#00000000"
                    android:src="@drawable/stamp_health_no"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imagebutton_second_first"
                    app:layout_constraintTop_toTopOf="@+id/imagebutton_second_first" />

                <TextView
                    android:id="@+id/textview_second_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:gravity="center"
                    android:fontFamily="@font/spoqahansansneoregular"
                    android:text="@string/challenge_explain"
                    android:textColor="#767171"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagebutton_second_second" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_sub_third"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@drawable/challenge_layout_radius"
                android:paddingBottom="23dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageview_back_third"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:visibility="invisible"
                    android:src="@drawable/challenge_back_third"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/textview_third_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="43dp"
                    android:fontFamily="@font/spoqahansansneoregular"
                    android:text="뽀득뽀득 세균퇴치"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textview_third_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/spoqahansansneobold"
                    android:text="깨끗하게 손씻기 3회"
                    android:textColor="@color/journey_pink_b"
                    android:textSize="26sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_third_title" />

                <ImageButton
                    android:id="@+id/imagebutton_third_first"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="24dp"
                    android:background="#00000000"
                    android:src="@drawable/stamp_health_no"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_third_content" />

                <ImageButton
                    android:id="@+id/imagebutton_third_second"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="12dp"
                    android:background="#00000000"
                    android:src="@drawable/stamp_health_no"
                    app:layout_constraintEnd_toStartOf="@+id/imagebutton_third_third"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagebutton_third_first" />

                <ImageButton
                    android:id="@+id/imagebutton_third_third"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="#00000000"
                    android:src="@drawable/stamp_health_no"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/imagebutton_third_second"
                    app:layout_constraintTop_toTopOf="@+id/imagebutton_third_second" />

                <TextView
                    android:id="@+id/textview_third_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:fontFamily="@font/spoqahansansneoregular"
                    android:text="@string/challenge_explain"
                    android:textColor="#767171"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagebutton_third_second" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/imageview_challenge_journey"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:src="@drawable/challenge_journey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintlayout_challenge_sub" />

        <TextView
            android:id="@+id/textview_journey_talk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/challenge_textview_round"
            android:fontFamily="@font/spoqahansansneoregular"
            android:lineSpacingExtra="10dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:translationY="-8dp"
            android:translationX="-9dp"
            android:text="@string/challenge_message_journey"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageview_challenge_journey"
            app:layout_constraintTop_toBottomOf="@+id/textview_journey_name" />

        <TextView
            android:id="@+id/textview_journey_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/challenge_journey_round"
            android:fontFamily="@font/spoqahansansneobold"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            android:text="쟈니"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/imageview_challenge_journey"
            app:layout_constraintTop_toBottomOf="@+id/constraintlayout_challenge_sub" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
