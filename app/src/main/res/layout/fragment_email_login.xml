<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="org.journey.android.login.viewmodel.LoginViewModel" />
    </data>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_return"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:background="@drawable/ic_gnbicnback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_email_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="32dp"
        android:text="이메일로 로그인"
        android:textColor="@color/mohaeng_black"
        android:textSize="22sp"
        android:fontFamily="@font/spoqahansansneobold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_return"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textSize="12sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/spoqahansansneoregular"
        android:textColor="@color/mohaeng_gray6"
        app:layout_constraintTop_toBottomOf="@id/textview_email_login"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="shattyddka@naver.com"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/spoqahansansneoregular"
        android:textSize="14sp"
        android:text="@={viewModel.email}"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_email"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="16dp"
        android:textColorHint="@color/mohaeng_gray7"
        android:backgroundTint="@color/mohaeng_gray7"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="12sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/spoqahansansneoregular"
        android:textColor="@color/mohaeng_gray6"
        app:layout_constraintTop_toBottomOf="@id/edittext_input_email"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호 입력"
        android:inputType="textPassword"
        android:text="@={viewModel.password}"
        android:fontFamily="@font/spoqahansansneoregular"
        android:textSize="14sp"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_password"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="16dp"
        android:textColorHint="@color/mohaeng_gray7"
        android:backgroundTint="@color/mohaeng_gray7"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_login_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/email_login_button"
        android:layout_marginHorizontal="18dp"
        android:text="로그인하기"
        android:textSize="16sp"
        android:stateListAnimator="@null"
        android:fontFamily="@font/spoqahansansneobold"
        android:textColor="@color/white"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/edittext_input_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgotten_password"
        android:fontFamily="@font/spoqahansansneomedium"
        android:textSize="10sp"
        android:layout_marginTop="16dp"
        android:textColor="@color/mohaeng_black"
        app:layout_constraintTop_toBottomOf="@id/button_login_complete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>