<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="org.journey.android.findpw.FindPassWordViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_return_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:background="@drawable/ic_gnbicnback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_ask_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 잊으셨나요?"
        android:textColor="@color/mohaeng_black"
        android:fontFamily="@font/spoqahansansneobold"
        android:textSize="22sp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintTop_toBottomOf="@id/button_return_back"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_reset_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="18dp"
        android:fontFamily="@font/spoqahansansneoregular"
        android:textSize="12sp"
        android:textColor="@color/mohaeng_gray8"
        android:text="비밀번호를 재설정하려는 이메일을 입력해주세요"
        app:layout_constraintTop_toBottomOf="@id/textview_ask_password"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textSize="12sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/spoqahansansneoregular"
        android:textColor="@color/mohaeng_gray6"
        app:layout_constraintTop_toBottomOf="@id/textview_reset_password"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="shattyddka@naver.com"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/spoqahansansneoregular"
        android:textSize="14sp"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_email"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="16dp"
        android:textColorHint="@color/mohaeng_gray7"
        android:backgroundTint="@color/mohaeng_gray7"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_send_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/email_login_button"
        android:layout_marginHorizontal="18dp"
        android:text="인증번호 전송"
        android:textSize="16sp"
        android:stateListAnimator="@null"
        android:fontFamily="@font/spoqahansansneobold"
        android:textColor="@color/white"
        android:layout_marginTop="116dp"
        app:layout_constraintTop_toBottomOf="@id/edittext_input_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>