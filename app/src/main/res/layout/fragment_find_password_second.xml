<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="org.journey.android.presentation.entry.findpw.viewmodel.FindPassWordViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_return_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="26dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/ic_gnbicnback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_ask_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증번호가 전송되었습니다."
            android:textColor="@color/mohaeng_black"
            android:fontFamily="@font/spoqahansansneobold"
            android:textSize="22sp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="18dp"
            app:layout_constraintTop_toBottomOf="@id/button_return_back"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_reset_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/spoqahansansneoregular"
            android:textSize="12sp"
            android:textColor="@color/mohaeng_gray8"
            android:text="이메일로 전송된 인증번호를 입력해주세요."
            app:layout_constraintTop_toBottomOf="@id/textview_ask_password"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edittext_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="인증번호 입력"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/spoqahansansneoregular"
            android:textSize="14sp"
            android:layout_marginStart="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_reset_password"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="100dp"
            android:paddingBottom="16dp"
            android:textColorHint="@color/mohaeng_gray7"
            android:backgroundTint="@color/mohaeng_gray7" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_send_verification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/email_login_button"
            android:layout_marginHorizontal="18dp"
            android:text="인증번호 확인"
            android:textSize="16sp"
            android:stateListAnimator="@null"
            android:fontFamily="@font/spoqahansansneobold"
            android:textColor="@color/white"
            android:layout_marginTop="116dp"
            app:layout_constraintTop_toBottomOf="@id/edittext_input_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>