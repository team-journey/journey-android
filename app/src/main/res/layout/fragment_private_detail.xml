<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="13dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_private_delete"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/ic_diary_private_button_delete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_private_detail_title"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_private_cancel"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/ic_diary_back_page_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_private_detail_title"
        />

    <TextView
        android:id="@+id/textview_private_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/spoqahansansneomedium"
        android:text="내 서랍장"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_private_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/imageview_private_detail_front"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/ic_mood_good"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_private_detail_title" />

    <TextView
        android:id="@+id/textview_private_detail_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/spoqahansansneobold"
        android:text="아라아랑이다"
        android:textColor="@color/mohaeng_black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textview_private_detail_date"
        app:layout_constraintStart_toEndOf="@+id/imageview_private_detail_front" />

    <TextView
        android:id="@+id/textview_private_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/spoqahansansneomedium"
        android:text="8월 15일"
        android:textColor="@color/mohaeng_black2"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_private_detail_front"
        app:layout_constraintStart_toEndOf="@+id/imageview_private_detail_front"
        app:layout_constraintStart_toStartOf="@+id/textview_private_detail_nickname" />

    <ImageView
        android:id="@+id/imageview_private_detail_back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:scaleType="fitXY"
        android:src="@drawable/picture_dummy"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@+id/imageview_private_detail_front" />


    <View
        android:id="@+id/view_feed_detail_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mohaeng_gray_a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_private_detail_back" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_feed_detail_line"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/textview_private_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gmarketsansttfmedium"
            android:text="뽀득뽀득 세균 퇴치 3일차"
            android:textColor="@color/mohaeng_orange_a"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textview_private_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansansneomedium"
            android:text="오늘은 맛집을 다녀왔다"
            android:textColor="@color/mohaeng_black"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_private_detail_title" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_private_detail_like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ic_feed_plus_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_private_detail_content" />


        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipgroup_like"
            style="@style/LikeChipStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginLeft="10dp"
            app:chipSpacing="6dp"
            app:chipSpacingVertical="10dp"
            app:layout_constraintStart_toEndOf="@+id/button_private_detail_like"
            app:layout_constraintTop_toTopOf="@+id/button_private_detail_like">

        </com.google.android.material.chip.ChipGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>