<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mohaeng_yellow4"
    tools:context=".splash.ui.SplashFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_splash_mohaeng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarketsansttfbold"
        android:text="MOHAENG"
        android:textColor="@color/mohaeng_yellow_fff"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_splash_footprint"
        android:layout_width="39dp"
        android:layout_height="48dp"
        android:background="@drawable/footprint"
        android:layout_marginBottom="13dp"
        app:layout_constraintStart_toEndOf="@id/textview_splash_mohaeng"
        app:layout_constraintBottom_toBottomOf="@id/textview_splash_mohaeng"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_splash_welcome_ment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모행에 온 것을 환영해!"
        android:textColor="@color/mohaeng_yellow_fff"
        android:fontFamily="@font/gmarketsansttflight"
        android:textSize="19dp"
        app:layout_constraintTop_toBottomOf="@id/textview_splash_mohaeng"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>