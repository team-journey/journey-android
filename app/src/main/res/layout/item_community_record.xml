<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="14dp"
        android:background="@drawable/item_record_radius">

        <ImageView
            android:id="@+id/imageview_community_item_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/textview_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:fontFamily="@font/spoqahansansneoregular"
            android:text="#맥주"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_second_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#여름"
            android:textSize="14sp"
            android:fontFamily="@font/spoqahansansneoregular"
            android:layout_marginLeft="2dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/textview_tags"
            app:layout_constraintBottom_toBottomOf="@id/textview_tags"/>

        <TextView
            android:id="@+id/textview_record_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/spoqahansansneoregular"
            android:text="@string/community_record_contents"
            android:textSize="15sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_tags" />

        <TextView
            android:id="@+id/textview_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="14dp"
            android:fontFamily="@font/spoqahansansneoregular"
            android:text="시원스쿨"
            android:layout_marginBottom="20dp"
            android:textSize="10sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_record_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_user_prefer"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="55dp"
            android:background="@drawable/ic_icnheartfull"
            app:layout_constraintBottom_toBottomOf="@id/textview_user_id"
            app:layout_constraintEnd_toStartOf="@+id/textview_count_prefer"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/textview_user_id"
            app:layout_constraintTop_toTopOf="@id/textview_user_id" />

        <TextView
            android:id="@+id/textview_count_prefer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="10sp"
            android:text="22"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_user_prefer"
            app:layout_constraintTop_toTopOf="@id/button_user_prefer"
            app:layout_constraintBottom_toBottomOf="@id/button_user_prefer"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>