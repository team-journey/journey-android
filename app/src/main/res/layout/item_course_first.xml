        android:translationY="-3dp"
        app:layout_constraintEnd_toEndOf="@+id/imageview_process_circle"
        app:layout_constraintTop_toBottomOf="@+id/imageview_process_first" />
-->

</androidx.constraintlayout.widget.ConstraintLayout>