<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview_process_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:src="@drawable/ic_course_first"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview_process_circle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/ic_dummyimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageview_process_first" />

    <TextView
        android:id="@+id/textview_process_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/spoqahansansneobold"
        android:text="1일차"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/imageview_process_circle"
        app:layout_constraintTop_toTopOf="@+id/imageview_process_circle" />

    <TextView
        android:id="@+id/textview_process_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_round"
        android:paddingHorizontal="12dp"
        android:paddingVertical="5dp"
        android:text="06.28 완료"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/textview_process_day"
        app:layout_constraintTop_toTopOf="@+id/textview_process_day" />

    <TextView
        android:id="@+id/textview_process_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="알콜스왑으로 핸드폰 닦기"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textview_process_day"
        app:layout_constraintTop_toBottomOf="@+id/textview_process_complete" />

