<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/library_round_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textview_library_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/bmhanna11yrsotf"
            android:text="뽀득뽀득 세균 퇴치"
            android:textColor="@color/journey_black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_library_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/spoqahansansneobold"
            android:text="7일 코스"
            android:textColor="@color/journey_gray_a"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textview_library_title"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textview_library_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/spoqahansansneoregular"
            android:text="@string/library_content_dummy"
            android:textColor="@color/journey_black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_library_title" />

        <ImageView
            android:id="@+id/imageview_library"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_library_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_library_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/library_button_blue"
            app:layout_constraintTop_toBottomOf="@+id/imageview_library"
            android:textSize="14sp"
            android:textColor="@color/journey_black"
            android:fontFamily="@font/spoqahansansneobold"
            android:text="코스 시작하기 >" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>