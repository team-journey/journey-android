<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_background"
    android:layout_width="168dp"
    android:layout_height="208dp"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="8dp">

    <ImageView
        android:id="@+id/imageview_recyclerview_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/item_background"
        app:layout_constraintLeft_toLeftOf="@id/item_background"
        app:layout_constraintRight_toRightOf="@id/item_background"
        app:layout_constraintTop_toTopOf="@id/item_background" />

    <TextView
        android:id="@+id/textview_private_hashtags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:gravity="left"
        app:layout_constraintTop_toTopOf="parent"
        android:text="#맥주 #여름"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/spoqahansansneomedium"
        android:layout_marginVertical="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textview_private_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="14dp"
        android:fontFamily="@font/spoqahansansneomedium"
        android:text="@string/community_record_contents"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/textview_private_hashtags" />

    <TextView
        android:id="@+id/textview_private_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시원스쿨"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_private_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="55dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:layout_marginStart="14dp"
        android:fontFamily="@font/spoqahansansneomedium"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_image_private"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginLeft="55dp"
        android:background="@drawable/ic_diary_private_heart"
        app:layout_constraintBottom_toBottomOf="@id/textview_private_nickname"
        app:layout_constraintEnd_toStartOf="@+id/textview_private_like_count"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/textview_private_nickname"
        app:layout_constraintTop_toTopOf="@id/textview_private_nickname" />

    <TextView
        android:id="@+id/textview_private_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:fontFamily="@font/spoqahansansneomedium"
        android:text="76"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/button_image_private"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_image_private"
        android:layout_marginRight="14dp"
        app:layout_constraintTop_toTopOf="@id/button_image_private" />

</androidx.constraintlayout.widget.ConstraintLayout>