<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="14dp"
    android:background="@drawable/item_challenge_reward">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimage_reward"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_flwgraphic"
        android:layout_marginLeft="22dp"
        android:layout_marginVertical="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textview_course_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="7 일 코스"
        android:textColor="@color/journey_gray10"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/spoqahansansneoregular"
        app:layout_constraintStart_toEndOf="@id/circleimage_reward"
        app:layout_constraintTop_toTopOf="@id/circleimage_reward"/>

    <TextView
        android:id="@+id/textview_course_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뽀득뽀득 세균 퇴치"
        android:textSize="18sp"
        android:textColor="@color/journey_black"
        android:fontFamily="@font/spoqahansansneobold"
        app:layout_constraintStart_toStartOf="@id/textview_course_term"
        app:layout_constraintTop_toBottomOf="@id/textview_course_term"/>

    <TextView
        android:id="@+id/textview_course_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/spoqahansansneoregular"
        android:text="2021.07.31"
        android:textColor="@color/journey_black"
        app:layout_constraintBottom_toBottomOf="@+id/circleimage_reward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/textview_course_subject"
        app:layout_constraintTop_toBottomOf="@id/textview_course_subject" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_reward_complete"
        android:layout_width="27dp"
        android:layout_height="12dp"
        android:background="@drawable/ic_rec663"
        android:layout_marginLeft="4dp"
        android:text="완료"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@id/textview_course_date"
        app:layout_constraintBottom_toBottomOf="@id/textview_course_date"
        app:layout_constraintTop_toTopOf="@id/textview_course_date"/>

</androidx.constraintlayout.widget.ConstraintLayout>